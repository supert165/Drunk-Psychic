<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.drunkness_tester.InformationDataActivity"
    android:background="#bbceff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey Man. Hw&apos;s it going? This is the test String!"
        android:id="@+id/welcomeTextView"
        android:layout_marginTop="42dp"
        android:paddingTop="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:lineSpacingMultiplier="1.2"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#b5fff9fd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. How many drinks have you had tonight?"
        android:id="@+id/numberDrinksTextView"
        android:layout_below="@+id/genderTextView"
        android:layout_alignLeft="@+id/genderTextView"
        android:layout_alignStart="@+id/genderTextView"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. I am a "
        android:id="@+id/IamATextView"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/welcomeTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/genderTextView"
        android:hint="Male/Female"

        android:layout_below="@+id/IamATextView"
        android:layout_alignLeft="@+id/IamATextView"
        android:layout_alignStart="@+id/IamATextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. For how long have you been drinking?"
        android:id="@+id/textView2"
        android:layout_below="@+id/numberDrinks"
        android:layout_alignLeft="@+id/numberDrinks"
        android:layout_alignStart="@+id/numberDrinks"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/numberDrinks"
        android:layout_below="@+id/numberDrinksTextView"
        android:layout_alignLeft="@+id/numberDrinksTextView"
        android:layout_alignStart="@+id/numberDrinksTextView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. What is your weight in pounds?"
        android:id="@+id/textView"
        android:layout_below="@+id/timeHours"
        android:layout_alignLeft="@+id/timeHours"
        android:layout_alignStart="@+id/timeHours"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weightText"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/weightText"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton"
        android:background="@drawable/oval"
        android:elevation="10dp"
        android:layout_marginBottom="68dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ></ImageButton>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/timeHours"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"/>


</RelativeLayout>
