<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.android.drunkness_tester.TestActivity"
                android:background="#88cd75">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We think you might be drunk."
        android:id="@+id/titleText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/imageButtonTest"
        android:background="@drawable/oval"
        android:elevation="10dp"
        android:layout_marginBottom="68dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/walk"></ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When you&apos;re ready, click on the start button and raise your hands perpendicular to your body. Be ready to walk in a straight line!"
        android:id="@+id/instructions"
        android:lineSpacingExtra="4dp"
        android:textStyle="normal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center_horizontal"
        android:textColor="#94010000"
        android:textSize="16dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="81dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let&apos;s test your drunkedness!"
        android:id="@+id/textView6"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
